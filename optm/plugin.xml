<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension-point id="extension_repository" name="Repository" schema="schema/net.optm.extensionpoint.repository.exsd"/>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="Open Poker Tournament Manager"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="clearPersistedState"
               value="true">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/optm/css/default.css">
         </property>
         <property
               name="appName"
               value="Open Poker Tournament Manager">
         </property>
      </product>
   </extension>

</plugin>
